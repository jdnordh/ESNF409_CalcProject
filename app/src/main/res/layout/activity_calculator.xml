<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lab.jdnordh.esnf409_calcproject.Calculator">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="bottom"
        android:lines="2"
        android:maxLines="2"
        android:textSize="20sp"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonSeven"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonEight"
        android:layout_alignTop="@+id/buttonSeven"
        android:layout_toRightOf="@+id/buttonSeven"
        android:layout_toEndOf="@+id/buttonSeven" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonNine"
        android:layout_alignTop="@+id/buttonEight"
        android:layout_toRightOf="@+id/buttonEight"
        android:layout_toEndOf="@+id/buttonEight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonDivide"
        android:layout_alignTop="@+id/buttonNine"
        android:layout_toRightOf="@+id/buttonNine"
        android:layout_toEndOf="@+id/buttonNine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonFour"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonFive"
        android:layout_alignTop="@+id/buttonFour"
        android:layout_toRightOf="@+id/buttonFour"
        android:layout_toEndOf="@+id/buttonFour" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonSix"
        android:layout_alignTop="@+id/buttonFour"
        android:layout_toRightOf="@+id/buttonFive"
        android:layout_toEndOf="@+id/buttonFive" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonTimes"
        android:layout_alignTop="@+id/buttonFour"
        android:layout_toRightOf="@+id/buttonSix"
        android:layout_toEndOf="@+id/buttonSix" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonOne"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="225dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonTwo"
        android:layout_alignTop="@+id/buttonOne"
        android:layout_toRightOf="@+id/buttonOne"
        android:layout_toEndOf="@+id/buttonOne" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonThree"
        android:layout_alignTop="@+id/buttonOne"
        android:layout_toRightOf="@+id/buttonTwo"
        android:layout_toEndOf="@+id/buttonTwo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonSub"
        android:layout_alignTop="@+id/buttonOne"
        android:layout_toRightOf="@+id/buttonThree"
        android:layout_toEndOf="@+id/buttonThree" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonDec"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonZero"
        android:layout_alignTop="@+id/buttonDec"
        android:layout_toRightOf="@+id/buttonDec"
        android:layout_toEndOf="@+id/buttonDec" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonEquals"
        android:layout_alignTop="@+id/buttonDec"
        android:layout_toRightOf="@+id/buttonZero"
        android:layout_toEndOf="@+id/buttonZero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonPlus"
        android:layout_alignTop="@+id/buttonDec"
        android:layout_toRightOf="@+id/buttonEquals"
        android:layout_toEndOf="@+id/buttonEquals" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonClear"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonPlus"
        android:layout_alignEnd="@+id/buttonPlus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
